<?xml version="1.0" encoding="utf-8"?>
<manifest 
  xmlns:android="http://schemas.android.com/apk/res/android" 
  package="com.sirius.timetable" 
  android:versionCode="1" 
  android:versionName="1.1" 
  android:installLocation="auto">
	<uses-sdk android:minSdkVersion="15" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<application 
    android:label="Расписание Сириус" 
    android:theme="@style/MyTheme"
    android:icon="@drawable/logo">
    <activity
      android:name="siriustimetable.droid.SplashActivity"
      android:theme="@style/MyTheme.Splash"
      android:noHistory="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity 
      android:name="siriustimetable.droid.MainActivity"
      android:launchMode="singleTop"
      android:label="Расписание"/>
    <activity
      android:name="siriustimetable.droid.DetailsActivity"
      android:label="Детали"
      android:parentActivityName="siriustimetable.droid.MainActivity"/>
		<receiver android:name="siriustimetable.droid.services.ScheduledAlarmHandler" android:enabled="true"></receiver>
	</application>
</manifest>